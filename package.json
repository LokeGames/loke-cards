{
  "name": "loke-cards",
  "version": "0.1.0",
  "description": "Interactive Fiction Scene Editor for Loke Engine",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "bash -c 'cd server && make && ./server'",
    "dev:full": "bash scripts/dev-full.sh",
    "dev:full:watch": "bash scripts/dev-full-watch.sh",
    "dev:real": "bash -c 'VITE_DEV_PORT=${VITE_DEV_PORT:-8081} vite'",
    "dev:kill-ports": "bash -lc 'lsof -tiTCP:${VITE_DEV_PORT:-8081} -sTCP:LISTEN | xargs -r kill -9; lsof -tiTCP:${BACKEND_PORT:-3000} -sTCP:LISTEN | xargs -r kill -9'",
    "build": "vite build",
    "preview": "vite preview",
    "check:types": "vue-tsc --noEmit",
    "check:types:watch": "vue-tsc --noEmit --watch",
    "dev:graph": "vite --config apps/graph/vite.config.js",
    "build:graph": "vite build --config apps/graph/vite.config.js",
    "preview:graph": "vite preview --config apps/graph/vite.config.js",
    "test": "playwright test",
    "lint": "eslint ."
  },
  "workspaces": [
    "cards-vue",
    "graph-vue",
    "shared-vue"
  ],
  "keywords": [
    "loke-engine",
    "interactive-fiction",
    "editor",
    "pwa"
  ],
  "author": "LokeGames",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "^10.5.1",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-pwa": "^1.1.0",
    "vue-tsc": "^3.1.1",
    "workbox-window": "^7.3.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "elkjs": "^0.11.0",
    "localforage": "^1.10.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  }
}
