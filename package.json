{
  "name": "loke-cards",
  "version": "0.1.0",
  "description": "Interactive Fiction Scene Editor for Loke Engine",
  "type": "module",
  "scripts": {
    "dev": "npm run dev -w @loke/cards",
    "dev:backend": "bash -c 'cd server && make && ./server'",
    "dev:full": "bash scripts/dev-full.sh",
    "dev:full:watch": "bash scripts/dev-full-watch.sh",
    "dev:real": "npm run dev -w @loke/cards",
    "dev:kill-ports": "bash -lc 'lsof -tiTCP:${VITE_DEV_PORT:-8081} -sTCP:LISTEN | xargs -r kill -9; lsof -tiTCP:${BACKEND_PORT:-3000} -sTCP:LISTEN | xargs -r kill -9'",
    "build": "npm run build -w @loke/cards",
    "preview": "npm run preview -w @loke/cards",
    "check:types": "npm run check:types:cards && npm run check:types:shared",
    "check:types:watch": "npm run check:types",
    "check:types:cards": "tsc -p cards/tsconfig.json --noEmit",
    "check:types:shared": "tsc -p shared/tsconfig.json --noEmit",
    "check:svelte": "svelte-check --tsconfig cards/tsconfig.json",
    "check:ts-purity": "node scripts/check-ts-purity.cjs",
    "ci": "npm run lint && npm run check:types && npm run check:svelte && npm run check:ts-purity",
    "test:unit:cards": "npm run test:unit -w @loke/cards",
    "dev:cards": "npm run dev -w @loke/cards",
    "build:cards": "npm run build -w @loke/cards",
    "preview:cards": "npm run preview -w @loke/cards",
    "dev:cards-vue": "npm run dev -C cards-vue",
    "build:cards-vue": "npm run build -C cards-vue",
    "preview:cards-vue": "npm run preview -C cards-vue",
    "dev:graph-vue": "vite --config graph-vue/vite.config.js",
    "build:graph-vue": "vite build --config graph-vue/vite.config.js",
    "preview:graph-vue": "vite preview --config graph-vue/vite.config.js",
    "test": "playwright test",
    "test:tdd": "npm run test:unit:watch -w @loke/cards",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint ."
  },
  "workspaces": [
    "cards",
    "shared",
    "apps/*",
    "workers/*",
    "packages/*"
  ],
  "keywords": [
    "loke-engine",
    "interactive-fiction",
    "editor",
    "pwa"
  ],
  "author": "LokeGames",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-svelte": "^2.46.0",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-pwa": "^1.1.0",
    "vue-tsc": "^3.1.1",
    "workbox-window": "^7.3.0"
  },
  "dependencies": {}
}
