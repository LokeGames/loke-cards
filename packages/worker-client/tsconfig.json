  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2020",
    "paths": {
      "@schemas": ["../schemas/src"],
      "@loke/workers-data/*": ["../../workers/data/src/*"]
