{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": [
    "cards-vue/**/*.ts",
    "cards-vue/**/*.vue",
    "cards-vue/**/*.js",
    "graph-vue/**/*.ts",
    "graph-vue/**/*.vue",
    "graph-vue/**/*.js",
    "shared-vue/**/*.ts",
    "shared-vue/**/*.vue",
    "shared-vue/**/*.js"
  ]
}
